# Lines configured by zsh-newuser-install
HISTFILE=~/.histfile
HISTSIZE=1000

SAVEHIST=1000
setopt extendedglob nomatch
unsetopt appendhistory autocd beep notify
bindkey -v

CASE_SENSITIVE="false"

DISABLE_UPDATE_PROMT="true"

# End of lines configured by zsh-newuser-install
# The following lines were added by compinstall
zstyle :compinstall filename '/home/leite/.zshrc'

autoload -Uz compinit
compinit
# End of lines added by compinstall

ZSH_THEME="xshay"

plugins=(
    git
    zsh-syntax-highligthing
    aws
    docker
    git-flow
    pep8
    pip
    python
    pylint
    screen
)

alias l='ls -lFh'
alias ll='ls -la'
alias grep='grep --color'

# Remap some keyboard keys

# Left shift to blank and Capslock to left shift
xmodmap -e "keycode 50 ="
xmodmap -e "keycode 66 = Shift_L"
